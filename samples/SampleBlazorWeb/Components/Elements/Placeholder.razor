@using Bolt.ServerDrivenUI.Core.Elements

@{
    if (Data is Bolt.ServerDrivenUI.Core.Elements.Placeholder placeholder)
    {
        var sections = placeholder.Sections;

        if(sections == null) return;
        
        foreach (var sectionName in sections)
        {
            if (Sections != null)
            {
                if (Sections.TryGetValue(sectionName, out var element))
                {
                    <RenderElement Element=@element Sections=@this.Sections/>
                }
            }
        }
    }
}

@code
{
    [Parameter]
    public required IElement Data { get; set; }
    [Parameter]
    public required Dictionary<string, IElement> Sections { get; set; }
}
