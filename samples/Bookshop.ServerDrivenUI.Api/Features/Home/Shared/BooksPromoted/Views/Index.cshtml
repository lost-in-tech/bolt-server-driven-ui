@using Bookshop.ServerDriveUI.Elements
@using Bookshop.ServerDriveUI.Elements.Layouts
@model Bookshop.ServerDrivenUI.Api.Features.Home.Shared.BooksPromoted.BookPromotedViewModel
<Stack>
    <Gap Xs="@UiSpace.Md"/>
    <Elements>
        @{
            if (Model.IncludeSeparator)
            {
                <Divider/>        
            } 
        }
        <Text As="@TextAs.H1" Value="@Model.Heading">
            <FontSize Xs="@FontSize.TwoXl"/>
            <FontWeight Xs="@FontWeight.Medium"/>
        </Text>
        <Stack>
            <Direction Xs="@Direction.Horizontal"/>
            <Gap Xs="@UiSpace.Xs"/>
            <ContentAlignX Xs="@AlignX.Center"/>
            <ContentAlignY Xs="@AlignY.Center"/>
            <Elements>
                @foreach (var book in Model.Items)
                {
                    <Stack>
                        <Width Xs="@book.Width"/>
                        <Elements>
                            <NavigateLink Url="@book.DetailsUrl">
                                <Elements>
                                    <Image Url="@book.ImageUrl" Alt="@book.Title"/>
                                </Elements>
                            </NavigateLink>
                        </Elements>
                    </Stack>
                }
            </Elements>
        </Stack>
    </Elements>
</Stack>