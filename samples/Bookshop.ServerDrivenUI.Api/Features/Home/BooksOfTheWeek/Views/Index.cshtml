@using Bookshop.ServerDriveUI.Elements
@model Bookshop.ServerDrivenUI.Api.Features.Home.BooksOfTheWeek.BookOfTheWeekViewModel
<Stack>
    <Gap Xs="@UiSpace.Md"/>
    <Elements>
        <Heading Text="@Model.Heading"/>
        <Stack>
            <Direction Xs="@Direction.Horizontal"/>
            <Gap Xs="@UiSpace.ThreeXs"/>
            <Elements>
                @foreach (var book in Model.Items)
                {
                    <Stack>
                        <Width Xs="OneHalf"/>
                        <Elements>
                            <NavigateLink Url="@book.DetailsUrl">
                                <Elements>
                                    <Image Url="@book.ImageUrl" Alt="@book.Title"/>
                                </Elements>
                            </NavigateLink>
                        </Elements>
                    </Stack>
                }
            </Elements>
        </Stack>
    </Elements>
</Stack>