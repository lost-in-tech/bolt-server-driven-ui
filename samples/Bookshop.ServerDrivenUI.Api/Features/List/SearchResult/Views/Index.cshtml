@using Bookshop.ServerDriveUI.Elements
@model Bookshop.ServerDrivenUI.Api.Features.List.SearchResult.SearchResultViewModel
<Stack>
    <Gap Xs="@UiSpace.Md"/>
    <Elements>
        <Heading Text="@Model.Heading">
            <FontSize Xs="@UiSpace.TwoXl"/>
        </Heading>
        @foreach (var group in Model.ItemsGroup)
        {
            <Stack>
                <Direction Xs="@Direction.Horizontal"/>
                <Gap Xs="@UiSpace.ThreeXs"/>
                <Elements>
                    @foreach (var book in group)
                    {
                        <Stack>
                            <Width Xs="OneHalf"/>
                            <Elements>
                                <NavigateLink Url="@book.DetailsUrl">
                                    <Elements>
                                        <Image Url="@book.ImageUrl" Alt="@book.Title"/>
                                    </Elements>
                                </NavigateLink>
                            </Elements>
                        </Stack>
                    }
                </Elements>
            </Stack>
        }
    </Elements>
</Stack>