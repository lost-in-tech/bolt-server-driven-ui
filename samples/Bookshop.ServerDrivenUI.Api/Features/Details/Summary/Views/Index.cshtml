@using Bookshop.ServerDriveUI.Elements
@model Bookshop.ServerDrivenUI.Api.Features.Details.Summary.BookSummaryViewModel
<Stack>
    <Gap Xs="@UiSpace.Md"/>
    <Elements>
        <Heading Text="@Model.Title">
            <FontSize Xs="@UiSpace.TwoXl"/>
        </Heading>
        <Stack>
            <!--<Width Xs="@StackWidth.OneHalf"/>-->
            <MaxWidth Xs="300"/>
            <Elements>
                <Image Url="@Model.ImageUrl" Alt="@Model.Title"/>
            </Elements>
        </Stack>
        <Paragraph>
            <Text>@Model.Summary</Text>
        </Paragraph>
        <NavigateLink Url="@Model.BackUrl">
            <OnClick _type="NavigateAction" Name="navigate">
                <Data Url="/"/>
            </OnClick>
            <Elements>
                <Text Value="@Model.BackText"/>
            </Elements>
        </NavigateLink>
    </Elements>
</Stack>